@model IEnumerable<Flashcards.DTOs.DeckDto>
<a href="/">Back to home page</a><br/>
<a href="/Deck/new">Add</a>

<p>My decks</p>
<ul>
    @foreach (var deck in Model)
    {
        <li>
            @deck.Name - 
            <a href="/Deck/edit/@deck.Id">Edycja</a>
            <form asp-action="DeleteDeck" asp-route-id="@deck.Id" method="post" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this deck?');">Usu≈Ñ</button>
            </form>
            <a href="/Flashcard?deckId=@deck.Id">Flashcards</a>
            <form action="/DeckSession/decks/@deck.Id" method="post" style="display:inline;">
                <button type="submit">Start Session</button>
            </form>
        </li>
    }
</ul>