@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<form asp-action="Login" method="post">
    <div>
        <label>Email</label>
        <input name="email" type="email" required />
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password" required />
    </div>
    <button type="submit">Login</button>
</form>