@model Flashcards.DTOs.CreateFlashcardDto
@section Styles {
<style>
    .card {
        max-width: 500px !important;
        margin: 50px auto;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
    }

</style>
}
@{
Layout = "_Layout";
}

<div class="card">
