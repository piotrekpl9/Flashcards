@model IEnumerable<Flashcards.DTOs.FlashcardDto>


@{
    Layout = "_Layout";
}


@if (@Model.FirstOrDefault()?.UserId == @User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
{
<a class="btn btn-sm btn-outline-primary" href="/Flashcard/new">Dodaj</a>
}
<div class="card">
    <div class="card-header">
        Flashcard table
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Front</th>
                <th>Back</th>
                @if (@Model.FirstOrDefault()?.UserId == @User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <th>Actions</th>
                }
            </tr>
            </thead>
            <tbody>
            @foreach (var flashcard in Model)
            {
                <tr>
                    <td>@flashcard.Id</td>
                
                    <td>@flashcard.Front</td>
                    <td>@flashcard.Back</td>
                    @if (@flashcard.UserId == @User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                    {
                        <td>
                     
                            <a class="btn btn-success btn-sm" href="/Flashcard/edit/@flashcard.Id"> Edit </a>
                            <form asp-action="DeleteFlashcard" asp-route-id="@flashcard.Id" method="post" style="display:inline;">
                                <button  class="btn btn-secondary btn-sm" type="submit" onclick="return confirm('Are you sure you want to delete this deck?');">Delete</button>
                            </form>
                        </td>
                    }

                </tr>
            }
            </tbody>
        </table>
        </div>
    </div>