@model Flashcards.DTOs.CreateFlashcardDto
@section Styles {
<style>
    .card {
        max-width: 500px !important;
        margin: 50px auto;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
    }

</style>
}
@{
Layout = "_Layout";
}
<div class="card">
    <div class="card-header">
        Add flashcard
    </div>
    <div class="card-body">
<form asp-action="New" method="post">
    <div class="mb-3">
        <label asp-for="Front" class="form-label"></label>
        <input asp-for="Front" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Back" class="form-label"></label>
        <input asp-for="Back" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DeckId" class="form-label"></label>
        <select asp-for="DeckId" asp-items="Model.Decks" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>   </div>
</div>