@model Flashcards.DTOs.CreateFlashcardDto

<h2>New Flashcard</h2>
<form asp-action="New" method="post">
    <div>
        <label asp-for="Front"></label>
        <input asp-for="Front" />
    </div>
    <div>
        <label asp-for="Back"></label>
        <input asp-for="Back" />
    </div>
    <div>
        <label asp-for="DeckId"></label>
        <select asp-for="DeckId" asp-items="Model.Decks"></select>
    </div>
    <button type="submit">Create</button>
</form>